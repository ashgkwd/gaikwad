<!DOCTYPE html>
<html>
<head>
	<% include ../partials/header.ejs %>
</head>
<body>

<section role="container-list" class="container">
	<article role="profile-header" class="big card">
		<aside role="profile-pic" class="image">
			<img src="/images/ashish.jpg">
		</aside>
		<main role="profile-info" class="content">
			<header role="profile-name">Ashish Gaikwad</header>
			<p class="lead">
				<i class="fa fa-rocket"></i> Fighting dreamer #yo
			</p>
		</main>
	</article>

	<% data.cards.forEach(function(w) { %>
	<article role="work" class="card">
		<aside role="company-logo" class="image">
			<img src="/images/<%= w.logo %>">
		</aside>
		<main role="work-info" class="content">
			<header role="company-name">
				<span><%= w.name %></span> <span class="right"> <%= w.from %> â†’ <%= w.to %></span>
			</header>
			<p class="lead"><%= w.lead %></p>
			<% if(w.refs) { %>
			<ul role="reference-links" class="unstyled">
				<% w.refs.forEach(function (r) { %>
				<li><a href="<%= r.link %>"><%= r.title %></a></li>
				<% }); %>
			</ul>
			<% } %>
		</main>
	</article>
	<% }); %>

