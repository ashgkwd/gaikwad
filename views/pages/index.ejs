<!DOCTYPE html>
<html>
<head>
	<% include ../partials/header.ejs %>
</head>
<body>

<section role="container-list" class="container">
	<article role="profile-header" class="big-card">
		<aside role="profile-pic" class="image">
			<img src="<%= data.profile.pic %>">
		</aside>
		<main role="profile-info" class="content text-center">
			<header role="profile-name"><%= data.profile.name %></header>
			<p class="lead"><%- data.profile.lead %></p>
			<footer role="links">
				<% data.profile.links.forEach(function(a, index) { %>
				<% if(index!=0) { %>&emsp;<% }; %>
				<a href="<%= a.link %>" class="lead" title="<%= a.icon %>"><i class="fa <%= 'fa-' + a.icon %>"></i></a>
				<% }); %>
			</footer>
		</main>
	</article>

	<% data.cards.forEach(function(w) { %>
	<article role="work" class="card">
		<header>
			<div role="company-logo" class="image">
				<img src="<%= w.logo %>">
			</div>
			<div role="name-and-time" class="titles">
				<strong class="company-name"><%= w.name %></strong>
				<p><%= w.from %> â†’ <%= w.to %></p>
			</div>
		</header>
		<main role="work-info" class="content">
			<p class="lead"><%- w.lead %></p>
		</main>
		<footer role="links">
			<% if(w.refs) { %>
				<% w.refs.forEach(function (r, index) { %>
				<% if(index!=0) { %>&emsp;<% }; %>
				<a href="<%= r.link %>" target="_blank"><i class="fa <%= 'fa-' + r.icon %>"></i></a>
				<% }); %>
			<% } %>
		</footer>
	</article>
	<% }); %>
</section>

<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
</body>
</html>
